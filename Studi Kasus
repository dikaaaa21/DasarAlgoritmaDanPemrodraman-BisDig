        "def faktorial(n):\n",
        "    if n == 0 or n == 1:  # Base case\n",
        "        return 1\n",
        "    else:\n",
        "        return n * faktorial(n - 1)  # Recursive case\n",
        "\n",
        "# Input dari pengguna\n",
        "angka = int(input(\"Masukkan angka untuk dihitung faktorialnya: \"))\n",
        "hasil = faktorial(angka)\n",
        "print(f\"{angka}! = {hasil}\")"
      ]
    },
    {
